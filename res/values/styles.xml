<resources>
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dashboard_btn_text_color</item>
        <item name="android:background">@null</item>
    </style>


    <!-- Action Bar -->
    <style name="action_bar_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/action_bar_title</item>
    </style>
    
    <!-- Buttons -->
    <style name="base_button" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/base_button_text_color</item>
        <item name="android:background">@drawable/grad_btn_silver</item>
    </style>
    
    <style name="green_button" parent="@style/base_button">
        <item name="android:background">@drawable/grad_btn_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="blue_button" parent="@style/base_button">
        <item name="android:background">@drawable/grad_btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
 
</resources>